{
  "name": "todo-app-001",
  "version": "1.0.0",
  "description": "React Todo Application (template-no-delete.tsx based)",
  "type": "module",
  "scripts": {
    "dev": "vite --port 1234",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.10.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "gh-pages": "^6.3.0",
    "happy-dom": "^12.10.3",
    "typescript": "4.9.3",
    "vite": "4.2.0",
    "vitest": "0.34.0"
  }
}
